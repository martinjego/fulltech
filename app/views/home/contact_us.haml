%header.bg-red.text-light
  .container.d-flex.justify-content-start.align-content-center.p-4
    .contact-tab.mr-4
      %i.fa.fa-phone.mr-1
      %span (02) 910 0699
    .contact-tab
      %i.fa.fa-envelope.mr-1
      %span draft@cars.com.ph
    
%section#contact-us
  .container.position-relative
    .navbar.navbar-expand-lg.navbar-dark.bg-dark.box-shadow.position-absolute.w-100
      %a.navbar-brand.d-flex.align-items-center
        = image_tag 'logo.png'
      %button.navbar-toggler{type: 'button', "data-toggle": "collapse", "data-target": "#navbar-content"}
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#navbar-content
        %ul.navbar-nav.mr-auto
          %li.nav-item
            %a.nav-link.text-light Home
          %li.nav-item
            %a.nav-link.text-light About Us
          %li.nav-item.dropdown
            %a.nav-link.text-light.dropdown-toggle{href: '#', id: 'ourProducts', role: 'button', "data-toggle": 'dropdown', "aria-haspopup": 'true', "aria-expanded": 'false'} Our Products
            .dropdown-menu{"aria-labeledby": "ourProducts"}
              %a.dropdown-item CAMC
              %a.dropdown-item ...
              %a.dropdown-item ...
          %li.nav-item
            %a.nav-link.text-light Contact Us
          %li.nav-item
            %a.nav-link.text-light News
  .container.pt-4.pb-4.mb-4
    .row.pt-4
      .col-md-8.pt-4.mt-4
        %h2.text-uppercase.text-red Contact Us
        %p Lorem Ipsum
        %form
          .form-group
            %label Name:
            %input.form-control{type: 'text'}
          .form-group
            %label Email:
            %input.form-control{type: 'text'}
          .form-group
            %label Email:
            %textarea.form-control{type: 'text'}
          .form-group
            %button.form-control.border-0.bg-red.text-light Submit
      .col-md-4.pt-4.mt-4
        .contact-group.mb-4
          %h2.text-red Address
          %p #123 Truck Street, Metro Manila, Makati City
        .contact-group.mb-4
          %h2.text-red Contact Number
          %p (02) 123 4567 | 0917 123 1234
        .contact-group.mb-4
          %h2.text-red Email Address
          %p CAMC@gmail.com
        .contact-group
          %h2.text-red Social Media
          %ul.m-0.p-0.contact-list
            %li.facebook 
              %i.fa.fa-facebook.mr-2
              %span CAMC
            %li.twitter 
              %i.fa.fa-twitter.mr-2
              %span CAMC
            %li.instagram 
              %i.fa.fa-instagram.mr-2
              %span CAMC
